        <script><![CDATA[var Autopopulatebilldetails = Class.create();
Autopopulatebilldetails.prototype = Object.extendsObject(AbstractAjaxProcessor, {

    getbilldetails: function() {
        var billid = this.getParameter('sysparm_billid');  // passed from client
        var obj = {};

        if (!billid) {
            obj.error = "No Bill selected";
            return JSON.stringify(obj);
        }

        var grbill = new GlideRecord('u_electricity_bill');
        if (grbill.get(billid)) {
            obj.billamt = grbill.getValue('u_total_amount');  // fetch bill amount
        } else {
            obj.error = "Bill not found";
        }

        return JSON.stringify(obj);
    }
});
]]></script>
